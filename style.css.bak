/* Resetowanie podstawowych stylów */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Arial', sans-serif;
    line-height: 1.5;
    background-color: #f0f0f0;
}

a {
    color: #000;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

/* Kontener główny */
.cv {
    max-width: 768px;
    margin: 40px auto;
    background-color: #fff;
    border: 1px solid #e0e0e0;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.cv-header {
    text-align: center;
    padding: 20px;
    border-bottom: 1px solid #e0e0e0;
}

.cv-header h1 {
    margin: 10px 0;
    font-size: 28px;
}

.cv-header h2 {
    margin-bottom: 10px;
    color: #777;
    font-weight: normal;
}

.cv-header p {
    color: #555;
}

/* Stylizacja sekcji CV */
.cv-section {
    padding: 20px;
    border-bottom: 1px solid #e0e0e0;
}

.cv-section:last-child {
    border-bottom: none;
}

.cv-section h2 {
    color: #333;
    font-size: 22px;
    margin-bottom: 10px;
}

.cv-section p {
    color: #555;
    margin-bottom: 5px;
}

.date {
    color: #777;
    font-style: italic;
}


.quote {
    font-style: italic;
    border-left: 4px solid #00bfa5;
    padding-left: 10px;
    margin-top: 10px;
}


.experience-item, .education-item {
    margin-bottom: 15px;
}


.languages p, .skills p {
    background-color: #f9f9f9;
    padding: 5px 10px;
    border-radius: 5px;
    display: inline-block;
}


@media screen and (max-width: 768px) {
    .cv {
        margin: 20px;
    }
}

.cv-section h2:hover {
    color: #808080; 
    cursor: pointer; 
}

.cv-section h2 {
    transition: color 0.3s; /* Dodaje płynne przejście koloru */
}

.cv-section h2:hover {
    color: #808080; /* Szary kolor dla efektu hover */
    cursor: pointer;
}
.cv-header {
    position: relative;
    text-align: center;
    padding: 20px;
    border-bottom: 1px solid #e0e0e0;
}

.profile-photo {
    position: absolute;
    top: 20px; /* Dostosuj, aby pasowało do układu */
    left: 20px; /* Dostosuj, aby pasowało do układu */
    border-radius: 50%; /* Daje okrągły kształt zdjęciu */
    width: 100px; /* Dostosuj rozmiar zdjęcia zgodnie z potrzebami */
    height: auto; /* Zachowuje proporcje zdjęcia */
}
